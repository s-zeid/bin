#!/usr/bin/env php
<?php

if ($argc !== 2) {
 file_put_contents("php://stderr", "Usage: {$argv[0]} entity\n");
 exit(2);
}

$entity = $argv[1];
if (substr($entity, 0, 1) !== "&")
 $entity = "&$entity";
if (substr($entity, strlen($entity) - 1, 1) !== ";")
 $entity = "$entity;";
echo html_entity_decode($entity, ENT_QUOTES, "UTF-8")."\n";

?>
