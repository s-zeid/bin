#!/bin/bash

JAVA_HOME="`readlink -f \`which java\` | sed -e "s:/bin/java::"`"
if [ "`uname -i`" = "x86_64" ]; then
 export LD_LIBRARY_PATH="$JAVA_HOME/lib/amd64"
else
 export LD_LIBRARY_PATH="$JAVA_HOME/lib/i386"
fi
if [ "$1" = "--stock-launcher" ]; then
 shift
 java -jar ~/opt/minecraft.jar "$@"
else
 java -jar ~/opt/minecraft-MagicLauncher.jar "$@"
fi
