#!/bin/sh

# Copyright (c) 2014-2015 Scott Zeid.
# Released under the X11 License:  <https://tldrlegal.com/l/x11>

DEFAULT_USER=root

if [ -z "$1" -o -z "$2" ]; then
 echo "Usage: $0 apk [username@]device-address [pm options [...]]" >&2
 echo "(username defaults to $DEFAULT_USER)" >&2
 exit 2
fi

APK="$1"
DEVICE="$2"
shift 2

if (printf '%s' "$DEVICE" | grep -v -q -e '@'); then
 DEVICE="$DEFAULT_USER@$DEVICE"
fi

TMP_NAME=/sdcard/.install-apk.tmp.apk

echo_run() { echo '+' "$@"; "$@"; }

echo_run scp "$APK" "$DEVICE":"$TMP_NAME"
[ $? -eq 0 ] && echo_run ssh "$DEVICE" su root pm install -r "$@" "$TMP_NAME"
[ $? -eq 0 ] && echo_run ssh "$DEVICE" su root rm -f "$TMP_NAME"
